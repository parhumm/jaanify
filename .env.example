# Jaanify — Environment Variables
# Copy to .env and fill in values

# ── Backend (apps/api) ────────────────────────────

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/jaanify?schema=public"

# Server
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"
LOG_LEVEL="info"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Auth — Google OAuth2
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# Auth — JWT
JWT_SECRET="YOUR_JWT_SECRET_MIN_32_CHARS_HERE"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_SECRET="YOUR_REFRESH_SECRET_MIN_32_CHARS_HERE"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Redis (optional)
REDIS_URL="redis://default:password@localhost:6379"

# OpenAI (for AI task parsing)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# ── Frontend (apps/web) ──────────────────────────

# API
NEXT_PUBLIC_API_URL="http://localhost:3000/v1"

# Auth — Google OAuth2
NEXT_PUBLIC_GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"

# Feature Flags
NEXT_PUBLIC_ENABLE_REASONING_CARDS="true"
NEXT_PUBLIC_ENABLE_VOICE_INPUT="true"
NEXT_PUBLIC_ENABLE_GUEST_MODE="true"

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""
